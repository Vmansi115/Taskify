{
  "compilerOptions": {
    "typeRoots": ["./typings", "./node_modules/@types"],
    "target": "ES2017", // Ensure modern ES target for compatibility with current Node.js versions
    "module": "ESNext", // Use ES modules for compatibility
    "moduleResolution": "node", // Ensure Node.js-style module resolution
    "outDir": "./dist", // Compiled output directory
    "rootDir": "./src", // Source files directory
    "esModuleInterop": true, // Ensure interoperability between CommonJS and ES modules
    "forceConsistentCasingInFileNames": true, // Enforce case sensitivity in imports
    "strict": true, // Enable strict type checking
    "skipLibCheck": true, // Skip type checking of declaration files for faster builds
    "resolveJsonModule": true, // Enable importing JSON files
    "allowSyntheticDefaultImports": true, // Allow default imports from modules without default exports
    "declaration": true, // Generate type declaration files
    "emitDeclarationOnly": true, // Output both JS and type declaration fil
    "types": ["node"],
    "lib": ["es6", "dom"],
    "allowImportingTsExtensions": true
  },
  "include": ["src"], // Include source directory
  "exclude": ["node_modules", "dist"] // Exclude unnecessary directories
}

